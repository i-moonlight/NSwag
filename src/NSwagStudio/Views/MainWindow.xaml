        <!-- About -->
        <TabItem Header="About" HeaderTemplate="{StaticResource RotatedTabItem}">
            <StackPanel Margin="8">
                <TextBlock Margin="0,0,0,8" FontSize="14">
                    <Hyperlink NavigateUri="http://nswag.org" Click="OnOpenHyperlink">NSwagStudio</Hyperlink>
